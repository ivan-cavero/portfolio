---
import { t, type TranslationKey } from '../i18n/translations';

interface Props {
  locale: 'en' | 'es';
}

const { locale } = Astro.props;

const projects = [
  {
    name: 'ERP System',
    type: 'Enterprise',
    status: 'Active Development',
    commits: 234,
    branches: 5
  },
  {
    name: 'Dashboard UI',
    type: 'Frontend',
    status: 'Completed',
    commits: 156,
    branches: 3
  },
  {
    name: 'API Gateway',
    type: 'Backend',
    status: 'Maintenance',
    commits: 89,
    branches: 2
  }
];
---

<div class="panel col-span-full fade-in">
  <div class="panel-header">
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-2">
        <!-- FolderGit2 icon -->
        <span class="text-[var(--accent)]">
          <svg  width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-folder-git-2"><path d="M9 20H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h3.9a2 2 0 0 1 1.69.9l.81 1.2a2 2 0 0 0 1.67.9H20a2 2 0 0 1 2 2v5"/><circle cx="13" cy="12" r="2"/><path d="M18 19c-2.8 0-5-2.2-5-5v8"/><circle cx="20" cy="19" r="2"/></svg>
        </span>
        <span class="header-text">{t('projects.showcase', locale)}</span>
      </div>
    </div>
  </div>

  <div class="p-6">
    <div class="space-y-4">
      {projects.map((project, index) => (
        <div 
          class="panel grid-pattern p-4 slide-in"
          style={`animation-delay: ${index * 0.1}s`}
        >
          <div class="flex justify-between items-start mb-3">
            <div>
              <h3 class="font-bold text-sm">{t(`project.${project.name.toLowerCase().replace(' ', '_')}` as TranslationKey, locale)}</h3>
              <p class="text-xs text-[var(--accent)]">{t(`project.type.${project.type.toLowerCase()}` as TranslationKey, locale)}</p>
            </div>
            <span class="technical-readout text-xs">
              {t(`project.status.${project.status.toLowerCase().replace(' ', '_')}` as TranslationKey, locale)}
            </span>
          </div>
          <div class="flex gap-4 text-xs">
            <div class="flex items-center gap-1">
              {/* <!-- GitCommit icon --> */}
              <span class="text-[var(--accent)]">
                <svg  width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-git-commit-horizontal"><circle cx="12" cy="12" r="3"/><line x1="3" x2="9" y1="12" y2="12"/><line x1="15" x2="21" y1="12" y2="12"/></svg>
              </span>
              <span>{project.commits} {t('commits', locale)}</span>
            </div>
            <div class="flex items-center gap-1">
              {/* <!-- GitBranch icon --> */}
              <span class="text-[var(--accent)]">
                <svg  width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-git-branch"><line x1="6" x2="6" y1="3" y2="15"/><circle cx="18" cy="6" r="3"/><circle cx="6" cy="18" r="3"/><path d="M18 9a9 9 0 0 1-9 9"/></svg>
              </span>
              <span>{project.branches} {t('branches', locale)}</span>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</div>