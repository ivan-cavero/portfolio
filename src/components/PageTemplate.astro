---
import Layout from '../layouts/Layout.astro';
import { CommanderProfile } from './commander-profile';
import { TechnicalSpecs } from './technical-specs';
import { MissionLog } from './mission-log';
import { CommunicationChannels } from './communication-channels';
import { ProjectsShowcase } from './projects-showcase';
import { LanguageSelector } from './language-selector';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
  <main class="min-h-screen w-full bg-[#000813]">
    <div class="mission-container">
      <div class="col-span-full grid grid-cols-1 lg:grid-cols-3 gap-4">
        <CommanderProfile client:load />
        <CommunicationChannels client:load />
      </div>
      <TechnicalSpecs client:load />
      <ProjectsShowcase client:load />
      <MissionLog client:load />
    </div>
    <LanguageSelector client:load />
  </main>
</Layout>

<style>
.mission-container {
  display: grid;
  gap: 1rem;
  padding: 1rem;
  grid-template-columns: repeat(12, 1fr);
  max-width: 1920px;
  margin: 0 auto;
}

@media (max-width: 1536px) {
  .mission-container {
    grid-template-columns: repeat(8, 1fr);
  }
}

@media (max-width: 1280px) {
  .mission-container {
    grid-template-columns: repeat(6, 1fr);
  }
}

@media (max-width: 768px) {
  .mission-container {
    grid-template-columns: 1fr;
    gap: 0.75rem;
    padding: 0.75rem;
  }
}
</style>

