---
import { t } from '../i18n/translations';

interface Props {
  locale: 'en' | 'es';
}

const { locale } = Astro.props;

// check locale and return the corresponding mailto link

const getMailtoLink = (email: string) => {
  if (locale === 'en') {
	const subject = 'Contact from your portfolio';
	const body = 'Hello Ivan,%0D%0A%0D%0A'; // %0D%0A is equivalent to a line break in mailto
    return `mailto:${email}?subject=${encodeURIComponent(subject)}&body=${body}`;
  } else if (locale === 'es') {
	const subject = 'Contacto desde tu portafolio';
	const body = 'Hola Ivan,%0D%0A%0D%0A'; // %0D%0A is equivalent to a line break in mailto
    return `mailto:${email}?subject=${encodeURIComponent(subject)}&body=${body}`;
  }
}

const email = 'ivangonzalezcavero@gmail.com'
const mailtoLink = getMailtoLink(email)
---

<div class="panel col-span-2 lg:col-span-1 flex flex-col relative overflow-hidden !border !border-red-500/30">
	<div class="absolute inset-0 bg-gradient-to-br from-red-500/10 to-transparent animate-pulse"></div>
	<div class="panel-header !bg-red-950/30 !border-b-red-500/30 !border-b relative z-10 !h-[42px] flex items-center !mb-0">
		<div class="flex items-center justify-between w-full">
			<div class="flex items-center gap-2">
				<span class="text-red-500">
					<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-siren"><path d="M7 12a5 5 0 0 1 5-5v0a5 5 0 0 1 5 5v6H7v-6Z"/><path d="M5 20a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2v2H5v-2Z"/><path d="M21 12h1"/><path d="M18.5 4.5 18 5"/><path d="M2 12h1"/><path d="M12 2v1"/><path d="m4.929 4.929.707.707"/><path d="M12 12v6"/></svg>
				</span>
				<span class="header-text !text-red-500">{t('contact.channels', locale)}</span>
			</div>
		</div>
	</div>

	<div class="p-6 flex-grow flex flex-col justify-between relative z-10">
		<div class="space-y-4">
			<div class="!bg-red-950/30 !border-l-4 !border-red-500 p-3 flex items-center justify-between">
				<div class="flex items-center gap-2">
					<span class="text-red-500 animate-pulse">
						<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-alert-triangle"><path d="m21.73 18-8-14a2 2 0 0 0-3.48 0l-8 14A2 2 0 0 0 4 21h16a2 2 0 0 0 1.73-3Z"/><line x1="12" y1="9" x2="12" y2="13"/><line x1="12" y1="17" x2="12.01" y2="17"/></svg>
					</span>
					<span class="text-sm header-text !text-red-400">{t('alert.status', locale)}</span>
				</div>
				<span class="!text-red-500 text-sm header-text font-bold animate-pulse">{t('urgent.contact', locale)}</span>
			</div>

			<div class="space-y-2">
				<div class="flex items-center gap-2">
					<a 
						href={mailtoLink}
						class="flex items-center gap-2 p-3 !bg-black/30 hover:!bg-red-500/20 transition-colors flex-grow group"
					>
						<span class="text-red-400 group-hover:text-red-500 transition-colors">
						<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-mail"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
						</span>
						<span class="text-sm mono-text group-hover:text-red-500 transition-colors">{email}</span>
					</a>
					<button
						id="copy-email"
						class="p-2 !bg-black/30 hover:!bg-red-500/20 transition-colors"
						aria-label={t('copy.email', locale)}
						type="button"
					>
						<svg id="copy-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-copy"><rect width="14" height="14" x="8" y="8" rx="2" ry="2"/><path d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2"/></svg>
						<svg id="check-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-check hidden"><polyline points="20 6 9 17 4 12"/></svg>
					</button>
				</div>
				
				<a 
					href="https://linkedin.com/in/ivangonzalezcavero"
					target="_blank"
					rel="noopener noreferrer"
					class="flex items-center gap-2 p-3 !bg-black/30 hover:!bg-red-500/20 transition-colors w-full group"
					>
					<span class="text-red-400 group-hover:text-red-500 transition-colors">
						<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-linkedin"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect width="4" height="12" x="2" y="9"/><circle cx="4" cy="4" r="2"/></svg>
					</span>
					<span class="text-sm mono-text group-hover:text-red-500 transition-colors">{t('linkedin.profile', locale)}</span>
				</a>
				
				<a 
					href="https://github.com/ivan-cavero"
					target="_blank"
					rel="noopener noreferrer"
					class="flex items-center gap-2 p-3 !bg-black/30 hover:!bg-red-500/20 transition-colors w-full group"
					>
					<span class="text-red-400 group-hover:text-red-500 transition-colors">
						<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-github"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
					</span>
					<span class="text-sm mono-text group-hover:text-red-500 transition-colors">{t('github.profile', locale)}</span>
				</a>
			</div>
		</div>

		<div class="space-y-2 mt-4">
			<a
				href="/Ivan-Gonzalez-Cavero-CV-ES.pdf"
				class="flex items-center justify-center gap-2 p-3 !bg-black/30 transition-colors w-full group opacity-50 cursor-not-allowed"
			>
				<span class="text-gray-400">
					<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-download"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" x2="12" y1="15" y2="3"/></svg>
				</span>
				<span class="text-sm mono-text text-gray-400">{t('download.cv.en', locale)}</span>
			</a>
			<a
				href="/Ivan-Gonzalez-Cavero-CV-ES.pdf"
				download
				class="flex items-center justify-center gap-2 p-3 !bg-black/30 hover:!bg-red-500/20 transition-colors hover:text-red-500 w-full group"
			>
				<span class="text-red-400 group-hover:text-red-500 transition-colors">
					<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-download"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" x2="12" y1="15" y2="3"/></svg>
				</span>
				<span class="text-sm mono-text group-hover:text-red-500 transition-colors">{t('download.cv.es', locale)}</span>
			</a>
		</div>
	</div>
</div>

<script>
  const copyButton = document.getElementById('copy-email') as HTMLButtonElement | null;
  const copyIcon = document.getElementById('copy-icon') as SVGElement | null;
  const checkIcon = document.getElementById('check-icon') as SVGElement | null;
  const email = 'ivangonzalezcavero@gmail.com';

  if (copyButton && copyIcon && checkIcon) {
    copyButton.addEventListener('click', () => {
      navigator.clipboard.writeText(email).then(() => {
        copyIcon.classList.add('hidden');
        checkIcon.classList.remove('hidden');
                
        setTimeout(() => {
          copyIcon.classList.remove('hidden');
          checkIcon.classList.add('hidden');
        }, 1000);
      }).catch(err => {
        console.error('Error copying email: ', err);
      });
    });
  }
</script>
